<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CreateLobbyFragment">

    <EditText
        android:id="@+id/lobby_name"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="88dp"
        android:layout_marginStart="88dp"
        android:layout_marginTop="136dp"
        android:ems="10"
        android:hint="Lobby Name"
        android:inputType="text"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/lobby_desc"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Lobby Description"
        android:inputType="text"
        android:singleLine="true"
        app:layout_constraintEnd_toEndOf="@+id/lobby_name"
        app:layout_constraintStart_toStartOf="@+id/lobby_name"
        app:layout_constraintTop_toBottomOf="@+id/lobby_name" />

    <Button
        android:id="@+id/createLB"
        android:layout_width="208dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="84dp"
        android:text="Create Lobby"
        app:layout_constraintEnd_toEndOf="@+id/lobby_desc"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/lobby_desc"
        app:layout_constraintTop_toBottomOf="@+id/lobby_desc" />
</android.support.constraint.ConstraintLayout>